[include]
path=~/.config/git/config.local

[core]
excludesfiles=~/.config/git/ignore

[alias]
st = status
l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

[pager]
branch = false
tag = false

[diff]
colorMoved = zebra

[rebase]
autosquash = true

[fetch]
prune = true

[merge]
ff = only

[push]
default = current

[pull]
rebase = true

[init]
defaultBranch = main
